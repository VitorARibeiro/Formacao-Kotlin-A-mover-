<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/velocimeterContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <!-- Initial Velocimeter View -->
        <com.example.kotlinspeedometer.SpeedometerView
            android:id="@+id/speedometerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- New Velocimeter View -->
        <com.github.anastr.speedviewlib.PointerSpeedometer
            android:id="@+id/pointerSpeedometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </FrameLayout>

    <Button
        android:id="@+id/switchVelocimeterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch Velocimeter"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/accelerationPedal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Acceleration" />

    <Button
        android:id="@+id/decelerationPedal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deceleration" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/animacaocarro"
        android:layout_marginBottom="12dp" />

</LinearLayout>
